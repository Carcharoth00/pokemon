<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TeamFragment">

    <!-- Un título claro y centrado para la sección. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Equipo Pokémon"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <!-- El RecyclerView mostrará la lista de Pokémon usando tu 'viewholder_pokemon.xml'.
         El ID 'recyclerViewTeam' coincide con el sugerido en la lógica del Fragment. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTeam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/viewholder_pokemon" /> <!-- ¡Clave! Previsualiza usando tu ViewHolder -->

    <!-- TextView que se mostrará cuando el equipo esté vacío -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vacio"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="120dp"
        android:drawablePadding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>

</LinearLayout>
